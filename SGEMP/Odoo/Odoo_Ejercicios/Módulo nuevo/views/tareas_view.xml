<!-- views/tareas_views.xml -->
<odoo>
    <record id="view_tarea_tree" model="ir.ui.view">
        <field name="name">mi_modulo_tareas.tarea.tree</field>
        <field name="model">mi_modulo_tareas.tarea</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nombre"/>
                <field name="fecha_vencimiento"/>
                <field name="estado"/>
            </tree>
        </field>
    </record>

    <record id="view_tarea_form" model="ir.ui.view">
        <field name="name">mi_modulo_tareas.tarea.form</field>
        <field name="model">mi_modulo_tareas.tarea</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="nombre"/>
                    <field name="descripcion"/>
                    <field name="fecha_vencimiento"/>
                    <field name="estado"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
