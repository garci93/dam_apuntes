<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="Button" x:Key="BotonOscuro">
        <Setter Property="BackgroundColor" Value="#404040"></Setter>
        <Setter Property="TextColor" Value="White"></Setter>
    </Style>
    <Style TargetType="Button" x:Key="BotonClaro">
        <Setter Property="BackgroundColor" Value="#e0e0e0"></Setter>
        <Setter Property="TextColor" Value="Black"></Setter>
    </Style>
    <Style TargetType="Button" x:Key="BotonInvOscuro">
        <Setter Property="BackgroundColor" Value="#e0e0e0"></Setter>
        <Setter Property="TextColor" Value="Black"></Setter>
    </Style>
    <Style TargetType="Button" x:Key="BotonInvClaro">
        <Setter Property="BackgroundColor" Value="Black"></Setter>
        <Setter Property="TextColor" Value="White"></Setter>
    </Style>

</ResourceDictionary>
