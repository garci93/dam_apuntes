<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ahorcado.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Text="Errores: 0 de 6"
                HorizontalOptions="Center"
                FontAttributes="Bold"/>
            <Image
                Source="img0.jpg"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <Label
                Text="______"
                CharacterSpacing="5"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="¡Has perdido!"
                FontSize="Medium"
                HorizontalOptions="Center"/>

            <Button
                x:Name="BtnReiniciar"
                Text="Reiniciar"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />

            <FlexLayout>
                <Grid BindableLayout.ItemsSource="{Binding Alfabeto}" />
            </FlexLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
