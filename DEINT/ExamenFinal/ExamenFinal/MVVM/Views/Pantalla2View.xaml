<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenFinal.MVVM.Views.Pantalla2View"
             Title="Favoritos">
    <FlexLayout>
        <CollectionView ItemsSource="{Binding Lista}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout>
                        <ImageButton HeightRequest="100" WidthRequest="100" CornerRadius="10" Source="{Binding Foto}" />
                        <Label Text="{Binding Nombre}" />
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </FlexLayout>
</ContentPage>