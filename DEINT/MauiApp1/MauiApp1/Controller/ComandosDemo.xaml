<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Controller.ComandosDemo"
             Title="ComandosDemo">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button x:Name="btnTest" Text="Click Me!" Clicked="btnTest_Clicked" />

        <ImageButton Source="dotnet_bot.svg" WidthRequest="100" HeightRequest="100" Clicked="btnTest_Clicked" />

        <SearchBar x:Name="searchControl" SearchButtonPressed="searchControl_SearchButtonPressed"/>

        <CheckBox IsChecked="True"/>
        <Slider x:Name="slider" Minimum="0" Maximum="10" MinimumTrackColor="Red" MaximumTrackColor="Blue" ThumbColor="White" ValueChanged="slider_ValueChanged"></Slider>
        
        
    </VerticalStackLayout>

    

</ContentPage>